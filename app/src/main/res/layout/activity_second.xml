<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.sumauto.app.SecondActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:fitsSystemWindows="true"/>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical">
        <CheckBox
            android:id="@+id/SYSTEM_UI_FLAG_LOW_PROFILE"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SYSTEM_UI_FLAG_LOW_PROFILE"/>
        <CheckBox
            android:id="@+id/SYSTEM_UI_FLAG_FULLSCREEN"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SYSTEM_UI_FLAG_FULLSCREEN"/>
        <CheckBox
            android:id="@+id/SYSTEM_UI_FLAG_LAYOUT_STABLE"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SYSTEM_UI_FLAG_LAYOUT_STABLE"/>
        <CheckBox
            android:id="@+id/SYSTEM_UI_FLAG_IMMERSIVE_STICKY"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SYSTEM_UI_FLAG_IMMERSIVE_STICKY"/>
        <CheckBox
            android:id="@+id/SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SYSTEM_UI_FLAG_LAYOUT_HIDE_NAVIGATION"/>
        <CheckBox
            android:id="@+id/SYSTEM_UI_FLAG_HIDE_NAVIGATION"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="SYSTEM_UI_FLAG_HIDE_NAVIGATION"/>
    </LinearLayout>
</FrameLayout>
